    "env-var": "^5.2.0",
    "graphql": "^14.6.0",
    "graphql-playground-middleware": "^1.1.2",
    "graphql-relay": "^0.6.0",
    "image-to-base64": "^2.0.1",
    "isomorphic-fetch": "^2.2.1",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
